<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.FrameLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/default_space"
            android:paddingBottom="@dimen/default_space">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/default_space_2"
                android:paddingTop="@dimen/default_space_half"
                android:paddingEnd="@dimen/default_space_2"
                android:paddingBottom="@dimen/default_space_half">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/google_sans_regular"
                    android:text="@string/file_details_path"
                    android:textSize="@dimen/text_size_xl"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/activity_file_details_path"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/google_sans_regular"
                    android:textSize="@dimen/text_size_xl"
                    tools:text="@sample/files_folders.json/data/path" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/default_space_2"
                android:paddingTop="@dimen/default_space_half"
                android:paddingEnd="@dimen/default_space_2"
                android:paddingBottom="@dimen/default_space_half">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/google_sans_regular"
                    android:text="@string/file_details_name"
                    android:textSize="@dimen/text_size_xl"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/activity_file_details_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/google_sans_regular"
                    android:textSize="@dimen/text_size_xl"
                    tools:text="@sample/files_folders.json/data/title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/default_space_2"
                android:paddingTop="@dimen/default_space_half"
                android:paddingEnd="@dimen/default_space_2"
                android:paddingBottom="@dimen/default_space_half">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/google_sans_regular"
                    android:text="@string/file_details_size"
                    android:textSize="@dimen/text_size_xl"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/activity_file_details_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/google_sans_regular"
                    android:textSize="@dimen/text_size_xl"
                    tools:text="@sample/files_folders.json/data/size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/activity_file_details_share"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:padding="13dp"
                    android:src="@drawable/ic_share_black_24dp"
                    android:tint="#808080" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</merge>