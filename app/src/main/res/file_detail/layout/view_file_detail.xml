<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/file_horizontal_lists_list_width"
    android:layout_height="match_parent"
    android:background="@color/file_detail_background"
    tools:parentTag="android.widget.ScrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="68dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/default_space_2"
            android:src="@drawable/ic_insert_drive_file_black_24dp"
            android:tint="#808080" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/view_file_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_space_1_5"
            android:layout_marginStart="@dimen/default_space_1_5"
            android:layout_marginTop="@dimen/default_space_1_5"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_xl"
            tools:text="@sample/files.json/data/title" />

        <TextView
            android:id="@+id/view_file_detail_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space_1_5"
            android:paddingEnd="@dimen/default_space_1_5"
            android:paddingStart="@dimen/default_space_1_5"
            android:textSize="@dimen/text_size_l"
            tools:text="@sample/files.json/data/path" />

        <TextView
            android:id="@+id/view_file_detail_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:paddingEnd="@dimen/default_space_1_5"
            android:paddingStart="@dimen/default_space_1_5"
            android:textSize="@dimen/text_size_l"
            tools:text="@sample/files.json/data/size" />

        <TextView
            android:id="@+id/view_file_detail_last_modified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:paddingEnd="@dimen/default_space_1_5"
            android:paddingStart="@dimen/default_space_1_5"
            android:textSize="@dimen/text_size_l"
            tools:text="@sample/files.json/data/lastModified" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/view_file_detail_play_previous"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginBottom="@dimen/default_space_quart"
                android:layout_marginEnd="@dimen/default_space_half"
                android:layout_marginStart="@dimen/default_space_1_5"
                android:layout_marginTop="@dimen/default_space_2"
                android:layout_weight="1"
                android:background="@drawable/bg_default_btn"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:src="@drawable/ic_skip_previous_black_24dp"
                android:tint="@android:color/white" />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/view_file_detail_play_pause"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginBottom="@dimen/default_space_quart"
                android:layout_marginEnd="@dimen/default_space_half"
                android:layout_marginStart="@dimen/default_space_half"
                android:layout_marginTop="@dimen/default_space_2"
                android:layout_weight="1"
                android:background="@drawable/bg_default_btn"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:src="@drawable/ic_play_arrow_black_24dp"
                android:tint="@android:color/white" />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/view_file_detail_play_next"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginBottom="@dimen/default_space_quart"
                android:layout_marginEnd="@dimen/default_space_1_5"
                android:layout_marginStart="@dimen/default_space_half"
                android:layout_marginTop="@dimen/default_space_2"
                android:layout_weight="1"
                android:background="@drawable/bg_default_btn"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:src="@drawable/ic_skip_next_black_24dp"
                android:tint="@android:color/white" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/view_file_detail_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="?android:selectableItemBackground"
            android:padding="13dp"
            android:src="@drawable/ic_delete_black_24dp"
            android:tint="#808080" />

    </LinearLayout>

</merge>
