<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/file_horizontal_lists_list_width"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.ScrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/default_space"
        android:paddingEnd="@dimen/default_space_1_5"
        android:paddingStart="@dimen/default_space_1_5"
        android:paddingTop="@dimen/default_space">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/default_space_2"
            android:src="@drawable/ic_insert_drive_file_black_24dp"
            android:tint="#808080" />

        <TextView
            android:id="@+id/view_file_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/default_space_1_5"
            android:textSize="@dimen/text_size_xl"
            tools:text="@sample/files.json/data/title" />

        <TextView
            android:id="@+id/view_file_detail_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:textSize="@dimen/text_size_l"
            tools:text="@sample/files.json/data/path" />

        <TextView
            android:id="@+id/view_file_detail_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:textSize="@dimen/text_size_l"
            tools:text="@sample/files.json/data/size" />

    </LinearLayout>

</merge>
