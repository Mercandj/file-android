<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_settings_dynamic_feature_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="26dp"
        android:fontFamily="@font/google_sans_regular"
        android:text="@string/view_settings_dynamic_feature_label"
        android:textColor="@color/text_secondary_color_light"
        android:textSize="@dimen/text_size_l" />

    <androidx.cardview.widget.CardView
        android:id="@+id/view_settings_dynamic_feature_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/settings_horizontal_margins"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/settings_horizontal_margins"
        android:layout_marginBottom="@dimen/default_space"
        app:cardCornerRadius="@dimen/settings_card_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/view_settings_dynamic_feature_search_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:orientation="vertical"
                android:paddingTop="@dimen/default_space_1_5"
                android:paddingBottom="@dimen/default_space_1_5">

                <TextView
                    android:id="@+id/view_settings_dynamic_feature_search_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/google_sans_regular"
                    android:paddingStart="@dimen/default_space_2"
                    android:paddingEnd="@dimen/default_space_2"
                    android:text="@string/view_settings_dynamic_feature_search_label"
                    android:textColor="@color/text_primary_color_light"
                    android:textSize="@dimen/text_size_xl" />

                <TextView
                    android:id="@+id/view_settings_dynamic_feature_search_sublabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/google_sans_regular"
                    android:paddingStart="@dimen/default_space_2"
                    android:paddingEnd="@dimen/default_space_2"
                    android:text="Dynamic feature are automatically installed when needed. They are optional so could be uninstalled."
                    android:textColor="@color/text_secondary_color_light" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/view_settings_dynamic_feature_search_uninstall"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="200dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginStart="@dimen/default_space_3"
                    android:layout_marginTop="@dimen/default_space_2"
                    android:layout_marginEnd="@dimen/default_space_3"
                    android:layout_marginBottom="@dimen/default_space"
                    android:background="@drawable/bg_default_btn"
                    android:fontFamily="@font/google_sans_regular"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Defer search uninstall"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_l_5" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>