<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.ScrollView">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/view_settings_version_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_marginEnd="@dimen/settings_horizontal_margins"
            android:layout_marginStart="@dimen/settings_horizontal_margins"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingTop="14dp">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/view_settings_version_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/default_space_3"
                    android:layout_marginStart="@dimen/default_space_3"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_xxl"
                    android:textStyle="bold"
                    tools:text="Version 1.00.00" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/view_settings_version_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/default_space_3"
                    android:layout_marginStart="@dimen/default_space_3"
                    android:layout_marginTop="@dimen/default_space_2"
                    android:gravity="center"
                    android:text="@string/view_settings_description"
                    android:textSize="@dimen/text_size_l" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/view_settings_rate"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="200dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="@dimen/default_space"
                    android:layout_marginEnd="@dimen/default_space_3"
                    android:layout_marginStart="@dimen/default_space_3"
                    android:layout_marginTop="@dimen/default_space_2"
                    android:background="@drawable/bg_default_btn"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/view_settings_rate_textï¸"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_l_5" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/view_settings_team_apps"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="200dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="@dimen/default_space_1_5"
                    android:layout_marginEnd="@dimen/default_space_3"
                    android:layout_marginStart="@dimen/default_space_3"
                    android:background="@drawable/bg_default_btn"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/view_settings_team_apps_text"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_l_5" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/view_settings_theme_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_marginEnd="@dimen/settings_horizontal_margins"
            android:layout_marginStart="@dimen/settings_horizontal_margins"
            android:layout_marginTop="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/view_settings_theme_section_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#08000000"
                    android:paddingBottom="4dp"
                    android:paddingEnd="@dimen/default_space_2"
                    android:paddingStart="@dimen/default_space_2"
                    android:paddingTop="12dp"
                    android:text="@string/view_settings_theme_section_label"
                    android:textColor="@color/text_secondary_color_light"
                    android:textSize="@dimen/text_size_m" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.7dp"
                    android:background="#33000000" />

                <LinearLayout
                    android:id="@+id/view_settings_theme_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/view_settings_theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/default_space_1_5"
                        android:paddingEnd="0dp"
                        android:paddingStart="0dp"
                        android:textColor="@color/text_primary_color_light"
                        android:textSize="@dimen/text_size_xl" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/default_space_1_5"
                        android:paddingTop="@dimen/default_space_1_5">

                        <TextView
                            android:id="@+id/view_settings_theme_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/default_space_2"
                            android:paddingStart="0dp"
                            android:text="@string/view_settings_theme_label"
                            android:textColor="@color/text_primary_color_light"
                            android:textSize="@dimen/text_size_xl" />

                        <TextView
                            android:id="@+id/view_settings_theme_sublabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:paddingEnd="@dimen/default_space_2"
                            android:paddingStart="0dp"
                            android:text="@string/view_settings_theme_sublabel"
                            android:textColor="@color/text_secondary_color_light" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</merge>