<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.FrameLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/view_file_column_row_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/ic_folder_black_24dp"
            android:tint="@color/color_primary" />

        <TextView
            android:id="@+id/view_file_column_row_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="@dimen/default_space"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/google_sans_regular"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textSize="@dimen/text_size_l_5"
            tools:text="@sample/files_folders.json/data/title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/view_file_column_row_arrow_right"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:tint="#888888" />

    </LinearLayout>

</merge>
